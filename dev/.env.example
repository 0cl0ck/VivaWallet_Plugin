# Database connection
DATABASE_URI=mongodb://127.0.0.1/viva-wallet-plugin-dev

# Payload secret key (minimum 32 characters)
PAYLOAD_SECRET=your-payload-secret-key-min-32-chars-change-this

# Next.js
NEXT_PUBLIC_SERVER_URL=http://localhost:3000

# Viva Wallet Demo Credentials
# Get your demo credentials from: https://demo.vivapayments.com
VIVA_CLIENT_ID=your-demo-client-id
VIVA_CLIENT_SECRET=your-demo-client-secret
VIVA_SOURCE_CODE=your-demo-source-code

# Viva Wallet Environment (demo or production)
VIVA_ENVIRONMENT=demo

# Webhook URL (your app's public URL + /api/viva-wallet/webhook)
# For local testing, use ngrok or similar tunnel service
VIVA_WEBHOOK_URL=https://your-app.ngrok.io/api/viva-wallet/webhook
