{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@payload-config": ["./dev/payload.config.ts"]
    },
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2022"
    ],
    "rootDir": "./",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "emitDeclarationOnly": true,
    "target": "ES2022",
    "composite": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./dev/**/*.ts",
    "./dev/**/*.tsx",
    "./dev/**/*.mjs",
    "./dev/next-env.d.ts",
    "./playwright.config.js",
  ],
}